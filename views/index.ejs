<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
	<%- include('partials/head') %>
	<title>Messages</title>
</head>

<body>
	<div class="container pt-5">
		<div class="d-flex align-items-center">
			<h1 class="mb-4">Messages</h1>
			<div class="ms-5 d-flex gap-2">
				<a href="/new" class="btn btn-primary">New message</a>
			</div>
		</div>
		<div class="mb-3">
			<% messages.forEach(message => { %>
			<div class="message border p-3 border-bottom rounded d-flex align-items-center gap-5 mb-3">
				<div>
					<h6><%= message.user %></h6>
					<p class="mb-0"><%= message.added %></p>
				</div>
				<div>
					<p class="fs-6 mb-0"><%= message.text %></p>
				</div>
			</div>
			<% }) %>
		</div>

	</div>
</body>

</html>